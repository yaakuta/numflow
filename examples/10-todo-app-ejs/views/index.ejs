<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TODO App - Numflow Framework</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>üìù TODO App</h1>
      <p class="subtitle">Powered by <strong>Numflow Framework</strong></p>
      <div class="badges">
        <span class="badge">‚úÖ Bulk Registration</span>
        <span class="badge">‚úÖ Feature-First</span>
        <span class="badge">‚úÖ EJS</span>
      </div>
    </header>

    <main>
      <!-- Add new TODO form -->
      <div class="add-todo">
        <form id="add-form" onsubmit="return addTodo(event)">
          <input
            type="text"
            id="todo-input"
            placeholder="Enter a new task..."
            autocomplete="off"
            required
          />
          <button type="submit">Add</button>
        </form>
      </div>

      <!-- TODO list -->
      <div class="todo-list">
        <% if (todos.length === 0) { %>
          <div class="empty-state">
            <p>üéâ No tasks yet!</p>
            <p class="empty-subtitle">Add a new task above to get started.</p>
          </div>
        <% } else { %>
          <% todos.forEach(function(todo) { %>
            <div class="todo-item <%= todo.completed ? 'completed' : '' %>" data-id="<%= todo.id %>">
              <div class="todo-content">
                <input
                  type="checkbox"
                  <%= todo.completed ? 'checked' : '' %>
                  onchange="toggleTodo(<%= todo.id %>)"
                />
                <span class="todo-text"><%= todo.text %></span>
              </div>
              <button class="delete-btn" onclick="deleteTodo(<%= todo.id %>)">
                üóëÔ∏è
              </button>
            </div>
          <% }); %>

          <!-- Statistics -->
          <div class="stats">
            <%
              var total = todos.length;
              var completed = todos.filter(t => t.completed).length;
              var active = total - completed;
            %>
            <span>Total: <strong><%= total %></strong></span>
            <span>Completed: <strong><%= completed %></strong></span>
            <span>Remaining: <strong><%= active %></strong></span>
          </div>
        <% } %>
      </div>
    </main>

    <footer>
      <p>Built with ‚ù§Ô∏è using <strong>Numflow Framework</strong></p>
      <p class="tech-stack">Convention over Configuration | Feature-First Auto-Orchestration</p>
    </footer>
  </div>

  <script>
    // Add new TODO
    async function addTodo(event) {
      event.preventDefault()

      const input = document.getElementById('todo-input')
      const text = input.value.trim()

      if (!text) return

      try {
        const response = await fetch('/todos', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ text }),
        })

        if (response.ok) {
          // Reload page on success
          location.reload()
        } else {
          const data = await response.json()
          alert('Error: ' + (data.error || 'Unknown error'))
        }
      } catch (error) {
        alert('Network error: ' + error.message)
      }

      return false
    }

    // Toggle TODO completion status
    async function toggleTodo(id) {
      try {
        const response = await fetch(`/todos/${id}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
        })

        if (response.ok) {
          location.reload()
        } else {
          const data = await response.json()
          alert('Error: ' + (data.error || 'Unknown error'))
        }
      } catch (error) {
        alert('Network error: ' + error.message)
      }
    }

    // Delete TODO
    async function deleteTodo(id) {
      if (!confirm('Are you sure you want to delete this task?')) return

      try {
        const response = await fetch(`/todos/${id}`, {
          method: 'DELETE',
        })

        if (response.ok) {
          location.reload()
        } else {
          const data = await response.json()
          alert('Error: ' + (data.error || 'Unknown error'))
        }
      } catch (error) {
        alert('Network error: ' + error.message)
      }
    }
  </script>
</body>
</html>
